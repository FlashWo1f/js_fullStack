/* miniprogram/pages/statistics/statistics.wxss */
.page{
    width: 100%;
    min-height: 100vh;
    background: #f5f5f5;
}
.header,.body,.footer{
    background: #ffffff;
}
.header{
    display: flex;
}
.todayTomato{
    height: 118rpx;
    width: 375rpx;
    box-sizing: border-box;
    margin: 55rpx 0;
    border-right: 2rpx #f5f5f5 solid;
    position: relative;
}
.totalTomato{
    height: 118rpx;
    width: 375rpx;
    box-sizing: border-box;
    margin: 55rpx 0;
    border-left: 2rpx #f5f5f5 solid;
    position: relative;
}
.todayText,.totalText{
    font-size: 25rpx;
    color: #888888;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
}
.todayNumber,.totalNumber{
    font-size: 50rpx;
    color: #f04457;
    margin-top: 37.5rpx;
    position: absolute;
    left: 50%;
    transform: translate(-50%, 25rpx);
    
}
.body{
  width: 100%;
  margin-top: 28rpx;
  padding: 0 28rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}
.body-top{
  height: 103rpx;
  font-size: 31rpx;
  color: #000000;
  border-bottom: 4rpx #d9d9d9 solid;
}
.body-top-left{
  float: left;
  margin: auto 0;
}
.finish-today{
  padding-top: 10rpx;
  margin-bottom: 10rpx;
}
.date-today{
  color: #888888;
  font-size: 21rpx;
}
.body-top-right{
  float: right;
  line-height: 103rpx;
}
.body-center{
  width: 100%;
  position: relative;
}
.body-bottom{
  display: flex;
  color: #888888;
  margin: 0 28rpx 0 28rpx;
  padding-bottom: 50rpx;
  justify-content: space-between;
}
.stuff{
  font-size: 26rpx;
  display: flex;
  flex: 1;
}
